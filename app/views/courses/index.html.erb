<p id="notice"><%= notice %></p>
<% if current_professor %>
<div class="container-fluid">
  <h1> Courses</h1>
  <div class="row">
    <div class="col-2 px-0 mx-0">
      <div class="list-group list-group-flush" id="list-tab" role="tablist">
        <%@courses = Course.where('professor_id = :current_id', {:current_id => current_professor.id})%>
        <%#Course.all.each do |course| %>
        <%@courses.each_with_index do |course,index| %>
          <a class="list-group-item list-group-item-action%>" name="course" onclick="showCourses(this)" id="list_course_<%=index%>" data-toggle="list" href="#list-home" role="tab" aria-controls="home"> <%= course.name %> </a>
        <%end%>
      </div>
    </div>
    <div id ="pageContent" class="col bg-light">
      <%#= render partial: "partials/course_list", locals: {courses: @courses}%>
      <% render 'partials/form_course_list_with_add_student' %>
    </div>
  </div>
</div>
<%end%>



