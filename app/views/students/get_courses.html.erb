<%if current_student != nil and current_student.id.to_s == params[:id].to_s%>

<div class="container bg-light py-5 px-5">

    <h1>Courses</h1>
    <table class="table">
      <thead>
      <tr>
        <th scope="col">Course Name</th>
        <th scope="col">Department</th>
        <th scope="col">Number</th>
        <th scope="col">Section</th>
        <th scope="col">course_id</th>
        <th scope="col">Professor</th>
        <th />
      </tr>
      </thead>
      <tbody>
        <% @courses_student_list = CoursesStudent.where("student_id = #{@student.id}")%>
        <!-- list student courses -->
        <% @course_list = @student.courses %>
          <% @course_list.each do |course| %>
          <tr>
            <td><%= course.name %></td>
            <td><%= course.dept %></td>
            <td><%= course.number %></td>
            <td><%= course.section %></td>
            <td><%= course.id %></td>
            
<% if false %>
            <% courses_student_ref = CoursesStudent.where("student_id = #{@student.id} and course_id = #{course.id}").first %>
            <td><%= link_to 'Drop', courses_student_ref, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    
<%else%>
  <div class="container">
    <div class="jumbotron vertical-center my-5 py-5">
      <div class="container text-center">
        <h1 class="display-4">Whoops!</h1>
        <p class="lead">You don't belong here!</p>
        page id = <%= params[:id]%>
        student id = <%#= current_student.id %>
        *these are for testing purposes*
      </div>
    </div>

  </div>
<%end%>
