<div class="container py-2">
  <div class="row my-5">
    <div class="col">

    </div>
    <div class="col-6 bg-light rounded py-3 px-4 justify-content-center">
      <h1 class="my-5"> Student Sign-Up</h1>
      <%= simple_form_for(@student, as: @student, url: registration_path(@student)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name, required: true %>
          <%= f.input :last_name, required: true %>
          <%= f.input :dot_number, required: true %>
          <%= f.input :email, required: true, autofocus: true %>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up" %>
        </div>
      <% end %>

      <%= render "students/shared/links" %>
    </div>
    <div class="col">

    </div>
  </div>
</div>


