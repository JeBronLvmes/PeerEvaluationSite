<div class="container-fluid" ng-app="evaluationApp" ng-controller="evaluationCon" ng-init="init(<%= professor.id %>)">

  <div class = "row">
    <h1 class="mr-auto"><%= title %>
			<!-- "+" icon -->
      <span>
				<button id="new_evaluation" class="btn btn-secondary" ng-click="addEvaluation()">
					<i class="fa fa-plus fa-2x"></i>
				</button>
			</span>
    </h1>

    <!-- toggle buttons -->
    <div id="buttonToggle" class="btn-group btn-group-toggle h-50 mt-2 mr-1" data-toggle="buttons">
      <button class="btn btn-primary" type="radio" ng-click="switchState()" ng-disabled="!isProfessorForm">Student Forms</button>
      <button class="btn btn-primary" type="radio" ng-click="switchState()" ng-disabled="isProfessorForm || !clickedClass">Professor Forms</button>
    </div>

  </div>

  <div class="row">
    <!-- List of Courses On The left -->
    <div class="col-2 px-0 mx-0">
      <div>
        <div id="courseList" class="list-group list-group-flush">
          <a id="list-tab" class="list-group-item list-group-item-action" role="tablist" name="course" ng-repeat="c in courses" ng-click="showDetail(c.id)"
             data-toggle="list" href="#list-home" role="tab" aria-controls="home"> {{c.name}} </a>
        </div>
        <%#= link_to 'Add Course', new_professor_course_path(professor), :class => 'btn'%>
        <a class="list-group-item list-group-item-action text-success text-center" name="addCourse" ng-click="toggleAddCourseForm()">Add Course</a>

        <!-- Add courses form -->
        <div class="container">
          <form name="addCourseForm" ng-submit="addCourse()" ng-show="showAddCourseForm">
            <div class="form-group">
              <label for="dept">Department</label>
              <input ng-model="$parent.course_dept" id="dept" type="text" class="form-control" placeholder="" />
            </div>
            <div class="form-group">
              <label for="courseNumber">Course Number</label>
              <input ng-model="$parent.course_number" id="courseNumber" type="number" class="form-control" placeholder="" />
            </div>
            <div class="form-group">
              <label for="section">Section</label>
              <input ng-model="$parent.course_section" id="section" type="number" class="form-control" placeholder="" />
            </div>
            <div class="form-group">
              <label for="courseName">Name</label>
              <input ng-model="$parent.new_course_name" id="courseName" type="text" class="form-control" placeholder="" />
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
          </form>
        </div>
      </div>
    </div>

    <!-- all of the page content to the right of the class list navigation bar -->
    <!-- Add professors form -->
    <div class="container" name="addEvaluationForm" ng-submit="addEvaluation()" ng-show="showAddEvaluationForm">
      <div>
        <%= form_with(model: @professor_form, local: true) do |form| %>

				<div class="form-group">
          <label for="professor_form_title">Title</label>
        	<input ng-model="$parent.new_evaluation_name" id="professor_form_title" type="text" name="professor_form[title]" class="form-control" placeholder=""/>
        </div>
       	<div class="form-group">
          <label for="professor_form_due_date">Due date</label>
        	<textarea ng-model="$parent.due_date" id="professor_form_due_date" name="professor_form[due_date]" class="form-control" placeholder="" ></textarea>
        </div>

       	<div class="form-group">
        	<label for="professor_form_submission_date">Submission date</label>
        	<textarea ng-model="$parent.submission_date" id="professor_form_submission_date" name="professor_form[submission_date]" class="form-control" placeholder=""></textarea>
        </div>

          <p>
            <%= form.label :course_id %><br>
            <%= collection_select(:professor_form, :course_id, @professor.courses, :id, :name) %>
          </p>

        <div class="form-group">
          <label for="professor_form_html_form">Html form</label>
        	<textarea ng-model="$parent.new_form" name="professor_form[html_form]" id="professor_form_html_form" class="form-control" placeholder=""></textarea>
        </div>

          <p>
            <button type="submit" class="btn btn-success">Submit</button>
          </p>

        <% end %>
      </div>
    </div>
    <div id ="pageContent" class="col bg-light px-5 pb-5">
      <!-- Course Title -->
      <div class="text-center">
        <h1>{{course_name}}</h1>
      </div>

      <div class="row">
        <!-- Evaluation Forms View -->
        <div ng-switch on="isGroupTemp">
          <div ng-switch-when="true">
            <br />
            <h2>Forms:</h2>

            <table class="table table-sm">
              <thead>
              <th>Title</th>
              <th>Due Date</th>
              <th>Creation Date</th>
              <th>Course ID</th>
              <th>View Form</th>
              </thead>
              <tr ng-repeat="form in forms">
                <td>{{form.title}}</td>
                <td>{{form.due_date}}</td>
                <td>{{form.submission_date}} </td>
                <td>{{form.course_id}} </td>
                <td><button id="new_evaluation" class="btn btn-secondary" ng-click="showForm(form.id)">
                  View Form
                </button></td>
                <td><button id="assign_evaluation" class="btn btn-secondary" ng-click="assignForm(form.id)">
                  Assign Form
                </button></td>
              </tr>
            </table>
            <div class="formContent" id="formContent" style="display:none;">
              <h1>{{form.title}}</h1>
              <p>{{"Due Date: " + form.due_date}}</p>
              <p>{{"Submission: " + form.submission_date}}</p>
              <p>{{"Form Data: " + form.html_form}}</p>
            </div>
          </div>
          <!-- Evaluation Students View -->
          <div ng-switch-when="false">

            <!-- Current Students Table -->
            <span class="h2 mr-auto">Current Students:</span>
            <table class="table table-lg">
              <thead>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Dot #</th>
              <th>e-mail</th>
              <th />
              </thead>
              <tr ng-repeat="s in students">
                <td>{{ s.first_name }}</td>
                <td>{{ s.last_name }}</td>
                <td>{{ s.dot_number }}</td>
                <td>{{ s.email }}</td>
                <td> <button class="btn btn-primary" ng-click="viewEvaluations(s.id)">View Evaluations</button> </td>
              </tr>
            </table>
            <br />
            <hr />
            <div id="studentEvaluations" style="display:none;">
              <h3> Incomplete forms</h3>
              <table class="table table-lg">
                <thead>
                <th>Title</th>
                <th />
                </thead>
                <tr ng-repeat="evaluation in incompleteEvaluations">
                  <td>{{evaluation.title}}</td>
                </tr>
              </table>
              <h3> Completed forms</h3>
              <table class="table table-lg">
                <thead>
                <th>Title</th>
                <th />
                </thead>
                <tr ng-repeat="evaluation in completedEvaluations">
                  <td>{{evaluation.title}}</td>
                </tr>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag 'contentEvaluations' %>

